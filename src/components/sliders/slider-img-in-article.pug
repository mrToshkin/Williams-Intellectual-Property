.slider
  .slider__nav.slider__nav--prev
    +icon-class-label('chevron', 'icon-chevron--left', 'slider images button left', '20', '11')
  .slider__nav.slider__nav--next
    +icon-class-label('chevron', 'icon-chevron--right', 'slider images button right', '20', '11')
  .slider__items
    .slider__item
      picture
        source(type="image/webp" media="(min-width: "+tablet+"px)" srcset="img/content/"+file1+".webp 1x, img/content/"+file1+"@2x.webp 2x")
