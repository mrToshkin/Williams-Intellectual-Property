.footer-bg-wrapper
  .container
    footer.footer
      nav.nav.footer__nav
        include ../nav/__menu
        .nav__submenu.submenu.submenu__item-5
          a(href="submit-your-idea.html").submenu__item-link
            +icon("arrow", "14", "9")
            span Submin your idea now
      .footer__social
        .footer__accreditation.accreditation
          a(href="#").accreditation__bbb
            picture
              source(type="image/webp", srcset="img/general/footer__bbb.webp")
              img(src="img/general/footer__bbb.png", alt="BBB Acredited Business")
            label.accreditation__label
              p.label__header BBB Rating: A+<br>
              p.label__body as of 6/5/2018<br>Click for Profile
          a(href="#")
            +icon-label('footer__napp', 'napp', '80', '43')
        .footer__social-icons
          include ../__social-icons/footer__social-icons
      .footer__info
        .company-info
          fieldset.rating
            legend.rating__caption Company rating:
            .rating__group
              input.rating__star(type="radio" name="rating" id="rating-1" value="1" aria-label="Company rating 1")
              input.rating__star(type="radio" name="rating" id="rating-2" value="2" aria-label="Company rating 2")
              input.rating__star(type="radio" name="rating" id="rating-3" value="3" aria-label="Company rating 3" checked)
              input.rating__star(type="radio" name="rating" id="rating-4" value="4" aria-label="Company rating 4")
              input.rating__star(type="radio" name="rating" id="rating-5" value="5" aria-label="Company rating 5")
          address
            p.company-info__address Benjamin Williams, Registered Patent Agent, Reg. No. 70416
            p.company-info__phonenumber Office: 1-888-357-1068. Fax: (720) 328-5297
        p.copyright Developed by: Anton Strizhov